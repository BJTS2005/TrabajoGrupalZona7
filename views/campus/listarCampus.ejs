<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Campus</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/campus_style/campus.css">
</head>

<body>

    <%- include ../../views/layout/cabecera.ejs %>
        <div class="container mt-5">
            <div class="campus-header d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">Gestión de Campus</h2>
                    <p class="text-muted">Administra la información de los campus universitarios</p>
                </div>
                <button class="add-campus-btn" onclick="location.href='/campus/registrar';">
                    <i class="fas fa-plus mr-2"></i>Nuevo Campus
                </button>
            </div>

            <div class="row">
                <!-- Campus Card 1 -->
                <% datos.forEach(campus=> { %>
                    <div class="col-md-6">
                        <div class="card campus-card" onclick="location.href='/campus/<%= campus.camp_id %>'" style="cursor: pointer;">
                                <img src="public/images/<%= campus.camp_id %>.png" 
                                     class="card-img-top w-100 object-fit-cover" 
                                     style="height: 200px;" 
                                     alt="campus <%= campus.camp_nom %>">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="campus-icon">
                                        <i class="fas fa-university"></i>
                                    </div>
                                    <div>
                                        <h5 class="card-title mb-0">
                                            <%= campus.camp_nom %>
                                        </h5>
                                        <span class="campus-id">
                                            <%= campus.camp_id %>
                                        </span>
                                    </div>
                                </div>
                                <p class="campus-location mb-3">
                                    <i class="fas fa-map-marker-alt mr-2 text-muted"></i>
                                    <%= campus.camp_calle_principal %>
                                </p>
                                <div class="d-flex justify-content-end">
                                    <button class="btn-action btn-view"
                                        onclick="location.href='/campus/<%= campus.camp_id %>';">
                                        <i class="fas fa-eye mr-1"></i>Gestionar
                                    </button>
                                    <button class="btn-action btn-edit"
                                        onclick="event.stopPropagation(); location.href='/campus/editar/<%= campus.camp_id %>';">
                                        <i class="fas fa-edit mr-1"></i>Editar
                                    </button>
                                    <form action="/campus/eliminar/<%= campus.camp_id %>" method="POST"
                                        onsubmit="return confirm('¿Estás seguro de eliminar este campus?');">
                                        <button class="btn-action btn-delete">
                                            <i class="fas fa-trash-alt mr-1"></i>Eliminar
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

