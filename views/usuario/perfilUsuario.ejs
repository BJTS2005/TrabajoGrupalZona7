<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/campus_style/servicios_trans/gestion-servicios-trans.css">
    <title>Perfil Usuario</title>
</head>

<body>
    <%- include ../../views/layout/cabecera.ejs %>

    <div class="container py-5">
        <!-- Profile Header with Avatar -->
        <div class="page-header d-flex align-items-center mb-4">
            <div class="me-4">
                <div style="width: 100px; height: 100px; background-color: var(--primary-color); border-radius: 50%; display: flex; justify-content: center; align-items: center;">
                    <i class="fas fa-user-circle fa-3x" style="color: white;"></i>
                </div>
            </div>
            <div>
                <h1 class="page-title mb-0">Perfil de Usuario</h1>
                <p class="page-subtitle d-flex align-items-center">
                    <i class="fas fa-info-circle me-2"></i>
                    Detalles de perfil
                </p>
            </div>
        </div>
    
        <!-- Main Content -->
        <div class="row">
            <!-- Left Column -->
            <div class="col-md-4 mb-4">
                <!-- Quick Info Card -->
                <div class="card filtro-gst-container h-100">
                    <div class="card-body">
                        <h5 class="card-title" style="color: var(--bg-header);">
                            <i class="fas fa-star me-2"></i>
                            Resumen
                        </h5>
                        <div class="d-flex align-items-center mb-3 p-3" style="background-color: rgba(74, 222, 128, 0.1); border-radius: 10px;">
                            <i class="fas fa-id-card fa-2x me-3" style="color: var(--primary-color);"></i>
                            <div>
                                <small class="text-muted d-block">ID Usuario</small>
                                <strong><%= user.id %></strong>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mb-3 p-3" style="background-color: rgba(59, 130, 246, 0.1); border-radius: 10px;">
                            <i class="fas fa-user-tag fa-2x me-3" style="color: var(--info-color);"></i>
                            <div>
                                <small class="text-muted d-block">Tipo de Usuario</small>
                                <strong><%= user.tipoDetalle %></strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    
            <!-- Right Column -->
            <div class="col-md-8">
                <!-- Personal Information Card -->
                <div class="card filtro-gst-container mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="card-title m-0" style="color: var(--bg-header);">
                                <i class="fas fa-user me-2"></i>
                                Información Personal
                            </h5>
                            
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="filtro-gst-field">
                                    <label class="filtro-gst-label">
                                        <i class="fas fa-user me-2"></i>
                                        Nombre
                                    </label>
                                    <div class="filtro-gst-input d-flex align-items-center">
                                        <%= user.name %>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="filtro-gst-field">
                                    <label class="filtro-gst-label">
                                        <i class="fas fa-user me-2"></i>
                                        Apellido
                                    </label>
                                    <div class="filtro-gst-input d-flex align-items-center">
                                        <%= user.apellido %>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="filtro-gst-field">
                                    <label class="filtro-gst-label">
                                        <i class="fas fa-id-badge me-2"></i>
                                        Cédula
                                    </label>
                                    <div class="filtro-gst-input d-flex align-items-center">
                                        <%= user.cedula %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    
                <!-- Contact Information Card -->
                <div class="card filtro-gst-container">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="card-title m-0" style="color: var(--bg-header);">
                                <i class="fas fa-address-book me-2"></i>
                                Información de Contacto
                            </h5>
                            
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="filtro-gst-field">
                                    <label class="filtro-gst-label">
                                        <i class="fas fa-phone me-2"></i>
                                        Teléfono
                                    </label>
                                    <div class="filtro-gst-input d-flex align-items-center">
                                        <%= user.telefono %>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="filtro-gst-field">
                                    <label class="filtro-gst-label">
                                        <i class="fas fa-envelope me-2"></i>
                                        Email
                                    </label>
                                    <div class="filtro-gst-input d-flex align-items-center">
                                        <%= user.email %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include ../../views/layout/footer.ejs %>
</body>

</html>