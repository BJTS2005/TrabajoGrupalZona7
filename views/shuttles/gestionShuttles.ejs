<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Servicios de Transporte</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <div class="container mt-5">
        <h1 class="text-center mb-4"> Gestión de Servicios de Transporte</h1>

        <div class="text-end mb-3">
            <button type="button" class="btn btn-success" data-bs-toggle="modal"
                data-bs-target="#modalRegistrarShuttle">
                Registrar Nuevo Servicio
            </button>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Tipo de Emisión</th>
                        <th>Descripción</th>
                        <th>Promedio de Pasajeros</th>
                        <th>Viajes al día</th>
                        <th>Fecha de Registro</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% shuttles.forEach(shuttle=> { %>
                        <tr>
                            <td>
                                <%= shuttle.sti_id %>
                            </td>
                            <td>
                                <%= shuttle.TipoEmision.tpe_detalle %>
                            </td>
                            <td>
                                <%= shuttle.sti_descripcion %>
                            </td>
                            <td>
                                <%= shuttle.sti_prom_pasajeros %>
                            </td>
                            <td>
                                <%= shuttle.sti_tot_viajes_dia %>
                            </td>
                            <td>
                                <%= new Date(shuttle.sti_fecha_registro).toLocaleDateString() %>
                            </td>
                            <td>
                                
                                <button class="btn btn-warning btn-sm"> Editar </button>
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>

    </div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>