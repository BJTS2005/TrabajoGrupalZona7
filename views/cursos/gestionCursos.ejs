<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Cursos</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Gestión de Cursos</h1>

        <!-- Botón para abrir el modal de registrar -->
        <div class="text-end mb-3">
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalRegistrarCurso">
                Registrar Nuevo Curso
            </button>
        </div>

        <!-- Tabla de Cursos -->
        <table class="table table-striped table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Descripción</th>
                    <th>Sostenible</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% cursos.forEach(curso => { %>
                    <tr>
                        <td><%= curso.cur_id %></td>
                        <td><%= curso.cur_descripcion %></td>
                        <td><%= curso.cur_es_sostenible ? "Sí" : "No" %></td>
                        <td>
                            <!-- Botón para abrir el modal de editar -->
                            <button 
                                class="btn btn-warning btn-sm" 
                                data-bs-toggle="modal" 
                                data-bs-target="#modalEditarCurso" 
                                data-id="<%= curso.cur_id %>" 
                                data-descripcion="<%= curso.cur_descripcion %>" 
                                data-sostenible="<%= curso.cur_es_sostenible %>">
                                Editar
                            </button>
                            <!-- Botón de eliminar -->
                            <form action="/cursos/gestionar/<%= currentCampus %>/eliminar/<%= curso.cur_id %>" method="POST" class="d-inline" onsubmit="return confirm('¿Estás seguro de eliminar este curso?');">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <!-- Modal para registrar nuevo curso -->
        <div class="modal fade" id="modalRegistrarCurso" tabindex="-1" aria-labelledby="modalRegistrarCursoLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalRegistrarCursoLabel">Registrar Nuevo Curso</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/cursos/gestionar/<%= currentCampus %>" method="POST">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="cur_id" class="form-label">ID del Curso</label>
                                <input type="text" class="form-control" id="cur_id" name="cur_id" maxlength="5" required>
                            </div>
                            <div class="mb-3">
                                <label for="cur_descripcion" class="form-label">Descripción</label>
                                <textarea class="form-control" id="cur_descripcion" name="cur_descripcion" rows="3" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="cur_es_sostenible" class="form-label">¿Es Sostenible?</label>
                                <select id="cur_es_sostenible" name="cur_es_sostenible" class="form-select" required>
                                    <option value="true">Sí</option>
                                    <option value="false">No</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Modal para editar curso -->
        <div class="modal fade" id="modalEditarCurso" tabindex="-1" aria-labelledby="modalEditarCursoLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalEditarCursoLabel">Editar Curso</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/cursos/gestionar/<%= currentCampus %>/actualizar" method="POST">
                        <div class="modal-body">
                            <input type="hidden" id="cur_id_editar" name="cur_id">
                            <div class="mb-3">
                                <label for="cur_descripcion_editar" class="form-label">Descripción</label>
                                <textarea class="form-control" id="cur_descripcion_editar" name="cur_descripcion" rows="3" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="cur_es_sostenible_editar" class="form-label">¿Es Sostenible?</label>
                                <select id="cur_es_sostenible_editar" name="cur_es_sostenible" class="form-select" required>
                                    <option value="true">Sí</option>
                                    <option value="false">No</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script para cargar datos en el modal de editar -->
    <script>
        const modalEditar = document.getElementById('modalEditarCurso');
        modalEditar.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget; // Botón que abrió el modal
            const id = button.getAttribute('data-id');
            const descripcion = button.getAttribute('data-descripcion');
            const sostenible = button.getAttribute('data-sostenible');

            // Cargar los valores en los campos del modal
            modalEditar.querySelector('#cur_id_editar').value = id;
            modalEditar.querySelector('#cur_descripcion_editar').value = descripcion;
            modalEditar.querySelector('#cur_es_sostenible_editar').value = sostenible;
        });
    </script>
</body>
</html>
