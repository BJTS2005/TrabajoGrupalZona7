<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/parciales/tabla.css">
    <title>Gestión de Servicios de Transporte</title>
</head>

<body>
    <div class="table-responsive">
        <table class="reutilizable-table rounded-3 border">
            <thead>
                <tr>
                    <% columnas.forEach(columna=> { %>
                        <th class="text-center align-middle">
                            <%= columna.nombre %>
                        </th>
                        <% }); %>
                            <th class="text-center align-middle">ACCIONES</th>
                </tr>
            </thead>
            <tbody>
                <% datos.forEach(item=> { %>
                    <tr>
                        <% columnas.forEach(col=> { %>
                            <% if (col.subCampo && item[col.campo]) { %>
                                <td class="text-center">
                                    <%= item[col.campo][col.subCampo] %>
                                </td>
                                <% } else { %>
                                    <td class="text-center">
                                        <%= item[col.campo] %>
                                    </td>
                                    <% } %>
                                        <% }); %>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center">
                                                    <button class="reutilizable-btn-action reutilizable-btn-edit" onclick="">
                                                        <i class="fas fa-edit mr-1"></i>Editar
                                                    </button>
                                                    <form action="/shuttles/gestionar/<%= currentCampus %>/eliminar/<%= item.sti_id %>" 
                                                        method="POST"
                                                        onsubmit="return confirm('¿Estás seguro de eliminar este campus?');">
                                                        <button class="reutilizable-btn-action reutilizable-btn-delete">
                                                            <i class="fas fa-trash-alt mr-1"></i>Eliminar
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>