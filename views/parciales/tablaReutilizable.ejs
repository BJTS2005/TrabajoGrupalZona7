    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <title>Gestión de Servicios de Transporte</title>
    <style>
        :root {

            --color-primary-btn: #4ade80;
            --color-info-btn: #3b82f6;
            --color-delete-btn: #ef4444;

            /* Variables de diseño */

            --transition-default-btn: all 0.3s ease;

            --primary-color: #4ade80;
            --primary-hover: #22c55e;
            --danger-color: #ef4444;
            --danger-hover: #dc2626;
            --info-color: #3b82f6;
            --info-hover: #2563eb;
            --bg-header: #101d3f;
            --text-light: #f8fafc;
        }

        body {
            background-color: #ffffff;
            color: #334155;
            font-family: system-ui, -apple-system, sans-serif;
        }

        .page-header {
            margin-bottom: 2rem;
        }

        .page-title {
            font-size: 1.75rem;
            font-weight: 600;
            color: #0f172a;
            margin-bottom: 0.5rem;
        }

        .page-subtitle {
            color: #64748b;
            font-size: 0.875rem;
        }

        .add-service-btn {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 0.7rem 1.5rem;
            border-radius: 8px;
            transition: all 0.2s ease;
        }

        .add-service-btn:hover {
            background-color: var(--primary-hover);
            color: white;
        }

        .table {
            margin-bottom: 0;
        }

        .table thead th {
            background-color: var(--bg-header);
            color: var(--text-light);
            font-weight: 500;
            padding: 1rem;
            border: none;
        }

        .table tbody td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid #e2e8f0;
        }

        .emission-type {
            background-color: #dbeaff;
            padding: 0.25rem 0.75rem;
            border-radius: 1rem;
            font-size: 0.875rem;
            color: #25488a;
            display: inline-block;
        }

        .btn-action {
            padding: 0.5rem;
            transition: var(--transition-default-btn);
            background: none;
            border: none;
            color: #333;
        }

        .btn-view:hover {
            color: var(--color-primary-btn);
        }

        .btn-edit:hover {
            color: var(--color-info-btn);
        }

        .btn-delete:hover {
            color: var(--color-delete-btn);
        }
    </style>
</head>

<body>
    <%- include ../../views/layout/cabecera.ejs %>

        <div class="container mt-5">
            <div class="page-header d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="page-title">Gestión de Servicios de Transporte</h1>
                    <p class="page-subtitle">Administra los servicios de transporte del campus</p>
                </div>
                <button class="add-service-btn" onclick="location.href='';">
                    <i class="fas fa-plus me-2"></i>Registrar Nuevo Servicio
                </button>
            </div>

            <div class="table-responsive">
                <table class="table rounded-3 border">
                    <thead>
                        <tr >
                            <% columnas.forEach(columna => { %>
                                <th class="text-center align-middle"><%= columna %></th>
                            <% }); %>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <% datos.forEach(item => { %>
                                <td class="text-center"><%= item[col.campo] %></td>
                            <% }); %>
                                <div class="d-flex justify-content-end">
                                    <button class="btn-action btn-edit" onclick="">
                                        <i class="fas fa-edit mr-1"></i>Editar
                                    </button>
                                    <form action="" method="POST"
                                        onsubmit="return confirm('¿Estás seguro de eliminar este campus?');">
                                        <button class="btn-action btn-delete">
                                            <i class="fas fa-trash-alt mr-1"></i>Eliminar
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
</body>

</html>





















