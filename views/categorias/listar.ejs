<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Categorías</title>
    <!-- Optimizado: Usar versiones específicas de las dependencias -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/categorias.css">
</head>

<body>
    <%- include('../../views/layout/cabecera') %>
    
    <main class="container mt-5">
        <header class="d-flex justify-content-between align-items-center mb-4">
            <section>
                <h1 class="h2">Gestión de Categorías</h1>
                <p class="text-muted">Administra las categorías de indicadores de sostenibilidad</p>
            </section>
            
            <section class="d-flex gap-3">
                <button class="btn-custom btn-primary-custom" onclick="location.href='/categorias/crear';">
                    <i class="fa-solid fa-plus me-2"></i>Nueva Categoría
                </button>
                <button class="btn-custom btn-secondary-custom" onclick="location.href='/miembros';">
                    <i class="fa-solid fa-users me-2"></i>Gestionar Miembros
                </button>
            </section>
        </header>

        <section class="categories-list">
            <% categorias.forEach(categoria=> { %>
            <article class="card category-card">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-4 d-flex align-items-center">
                            <span class="category-icon">
                                <i class="fa-solid fa-seedling"></i>
                            </span>
                            <div>
                                <h2 class="h5 mb-1"><%= categoria.cat_nombre %></h2>
                                <p class="text-muted mb-0">Código: <%= categoria.cat_cod %></p>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <p class="mb-0">Porcentaje: <%= categoria.cat_porc %>%</p>
                        </div>
                        
                        <div class="col-md-4 d-flex gap-2 justify-content-md-end mt-3 mt-md-0">
                            <button class="btn-action btn-view" onclick="location.href='/indicadores/gestionar/<%= categoria.cat_cod %>';">
                                <i class="fas fa-eye me-1"></i>Ver
                            </button>
                            <button class="btn-action btn-edit" onclick="location.href='/categorias/editar/<%= categoria.cat_cod %>';">
                                <i class="fas fa-edit me-1"></i>Editar
                            </button>
                            <form action="/categorias/eliminar/<%= categoria.cat_cod %>" method="POST" onsubmit="return confirm('¿Estás seguro de eliminar esta categoría?');">
                                <button class="btn-action btn-delete">
                                    <i class="fas fa-trash-alt me-1"></i>Eliminar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
            <% }); %>
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
