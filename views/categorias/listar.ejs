<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .category-card {
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">
            <%= title %>
        </h1>

        <!-- Botón para agregar nueva categoría -->
        <div class="text-end mb-4">
            <a href="/categorias/crear" class="btn btn-success">Agregar Nueva Categoría</a>
        </div>

        <div class="text-end mb-4">
            <a href="/miembros" class="btn btn-info btn-lg">Gestionar Miembros de la Unidad</a>
        </div>
        

        <!-- Contenedor de cards -->
        <div class="row row-cols-1 row-cols-md-2 g-4">
            <% if (categorias.length===0) { %>
                <div class="alert alert-warning text-center">
                    No se encontraron categorías registradas.
                </div>
                <% } else { %>
                    <% categorias.forEach(categoria=> { %>
                        <div class="col">
                            <div class="card category-card h-100">
                                <div class="card-header bg-primary text-white text-center">
                                    <strong>
                                        <%= categoria.cat_nombre %>
                                    </strong>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">
                                        <strong>Código:</strong>
                                        <%= categoria.cat_cod %><br>
                                            <strong>Porcentaje:</strong>
                                            <%= categoria.cat_porc %>%<br>
                                    </p>
                                </div>
                                <div class="card-footer text-center">
                                    <!-- Botón para gestionar indicadores -->
                                    <a href="/indicadores/gestionar/<%= categoria.cat_cod %>"
                                        class="btn btn-primary btn-sm mb-2">Gestionar Indicadores</a>
                                    <!-- Botón para editar categoría -->
                                    <a href="/categorias/editar/<%= categoria.cat_cod %>"
                                        class="btn btn-warning btn-sm mb-2">Editar</a>
                                    <!-- Botón para eliminar categoría -->
                                    <form action="/categorias/eliminar/<%= categoria.cat_cod %>" method="POST"
                                        class="d-inline"
                                        onsubmit="return confirm('¿Estás seguro de eliminar esta categoría?');">
                                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                            <% } %>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>