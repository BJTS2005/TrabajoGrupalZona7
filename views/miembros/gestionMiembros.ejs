<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <title>Gestión de Miembros</title>
    <link rel="stylesheet" href="/stylesheets/campus_style/servicios_trans/gestion-servicios-trans.css">
</head>

<body>
    <%- include ../../views/layout/cabecera.ejs %>
        <div class="container mt-5">
            <div class="page-header d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="page-title">Gestión de Miembros</h1>
                    <p class="page-subtitle">Administra los miembros y sus tipos</p>
                </div>
                <section class="d-flex gap-3">
                    <button class="add-service-btn" data-bs-toggle="modal" data-bs-target="#modalRegistrarMiembro">
                        <i class="fas fa-plus me-2"></i>Registrar Nuevo Miembro
                    </button>
                    <button class="add-service-btn" onclick="location.href='/miembros/tipos'">
                        <i class="fas fa-users-cog me-2"></i>Gestionar Tipos de Usuario
                    </button>
                </section>
            </div>

            <!-- Tabla de Miembros -->
            <div class="table-responsive">
                <table class="reutilizable-table rounded-3 border w-100">
                    <thead>
                        <tr>
                            <th class="text-center align-middle">Cédula</th>
                            <th class="text-center align-middle">Nombre</th>
                            <th class="text-center align-middle">Apellido</th>
                            <th class="text-center align-middle">Teléfono</th>
                            <th class="text-center align-middle">Correo</th>
                            <th class="text-center align-middle">Tipo de Usuario</th>
                            <th class="text-center align-middle">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% miembros.forEach(miembro=> { %>
                            <%if(miembro.TipoUsuario.PermisoUsuario.perus_detalle==="GM_TE_USER" ){%>
                                <tr>
                                    <td class="text-center">
                                        <%= miembro.user_cedula %>
                                    </td>
                                    <td class="text-center">
                                        <%= miembro.user_nombre %>
                                    </td>
                                    <td class="text-center">
                                        <%= miembro.user_apellido %>
                                    </td>
                                    <td class="text-center">
                                        <%= miembro.user_telefono %>
                                    </td>
                                    <td class="text-center">
                                        <%= miembro.user_email %>
                                    </td>
                                    <td class="text-center">
                                        <%= miembro.TipoUsuario.tipus_detalles %>
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center">
                                            <button class="reutilizable-btn-action reutilizable-btn-edit"
                                                data-bs-toggle="modal" data-bs-target="#modalEditarMiembro"
                                                data-id="<%= miembro.user_id %>"
                                                data-cedula="<%= miembro.user_cedula %>"
                                                data-nombre="<%= miembro.user_nombre %>"
                                                data-apellido="<%= miembro.user_apellido %>"
                                                data-telefono="<%= miembro.user_telefono %>"
                                                data-email="<%= miembro.user_email %>"
                                                data-tipus="<%= miembro.tipus_id %>">
                                                <i class="fas fa-edit mr-1"></i>Editar
                                            </button>
                                            <form action="/miembros/eliminar/<%= miembro.user_id %>" method="POST"
                                                onsubmit="return confirm('¿Estás seguro de eliminar este miembro?');">
                                                <button class="reutilizable-btn-action reutilizable-btn-delete">
                                                    <i class="fas fa-trash-alt mr-1"></i>Eliminar
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <% } %>
                                    <% }); %>

                    </tbody>
                </table>
            </div>

            <!-- Modal Registrar -->
            <div class="modal fade" id="modalRegistrarMiembro" tabindex="-1"
                aria-labelledby="modalRegistrarMiembroLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content modal-rst-bg-dark">
                        <div class="modal-header border-0 px-4 pt-4">
                            <div>
                                <h5 class="modal-title text-success fs-6">Nuevo Miembro</h5>
                            </div>
                            <button type="button" class="btn-close btn-close-white opacity-75" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                        </div>
                        <div class="modal-body px-4">
                            <h4 class="text-white mb-4">Registrar Miembro</h4>
                            <form action="/miembros" method="POST">
                                <div class="mb-4">
                                    <label for="user_cedula" class="form-label modal-rst-label">
                                        <i class="fa fa-id-card icono-modal-rst me-2"></i>Cédula
                                    </label>
                                    <input type="text" class="form-control modal-rst-input" id="user_cedula"
                                        name="user_cedula" maxlength="10" required placeholder="Ej: 1700000001">
                                </div>

                                <div class="mb-4">
                                    <label for="user_nombre" class="form-label modal-rst-label">
                                        <i class="fa fa-user icono-modal-rst me-2"></i>Nombres
                                    </label>
                                    <input type="text" class="form-control modal-rst-input" id="user_nombre"
                                        name="user_nombre" maxlength="50" required placeholder="Ej: Juan">
                                </div>

                                <div class="mb-4">
                                    <label for="user_apellido" class="form-label modal-rst-label">
                                        <i class="fa fa-user icono-modal-rst me-2"></i>Apellidos
                                    </label>
                                    <input type="text" class="form-control modal-rst-input" id="user_apellido"
                                        name="user_apellido" maxlength="50" required placeholder="Ej: Pérez">
                                </div>

                                <div class="mb-4">
                                    <label for="user_telefono" class="form-label modal-rst-label">
                                        <i class="fa fa-phone icono-modal-rst me-2"></i>Teléfono
                                    </label>
                                    <input type="text" class="form-control modal-rst-input" id="user_telefono"
                                        name="user_telefono" maxlength="10" required placeholder="Ej: 0999999999">
                                </div>

                                <div class="mb-4">
                                    <label for="user_email" class="form-label modal-rst-label">
                                        <i class="fa fa-envelope icono-modal-rst me-2"></i>Correo
                                    </label>
                                    <input type="email" class="form-control modal-rst-input" id="user_email"
                                        name="user_email" maxlength="35" required placeholder="Ej: ejemplo@ejemplo.com">
                                </div>

                                <div class="mb-4">
                                    <label for="user_password" class="form-label modal-rst-label">
                                        <i class="fa fa-lock icono-modal-rst me-2"></i>Contraseña
                                    </label>
                                    <input type="password" class="form-control modal-rst-input" id="user_password"
                                        name="user_password" required placeholder="********">
                                </div>

                                <div class="mb-4">
                                    <label for="tipus_id" class="form-label modal-rst-label">
                                        <i class="fa fa-users icono-modal-rst me-2"></i>Tipo de Usuario
                                    </label>
                                    <select id="tipus_id" name="tipus_id" class="form-select modal-rst-input" required>
                                        <% tiposMiembro.forEach(tipo=> { %>
                                            <%if(tipo.PermisoUsuario.perus_detalle==="GM_TE_USER"){%>
                                                <option value="<%= tipo.tipus_id %>">
                                                    <%= tipo.tipus_detalles %>
                                                </option>
                                                <% } %>
                                                    <% }); %>
                                    </select>
                                </div>

                                <div class="modal-footer border-0 px-4 pb-4">
                                    <button type="button" class="btn modal-rst-btn-cancel"
                                        data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn modal-rst-btn-success px-4">Registrar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal Editar -->
            <div class="modal fade" id="modalEditarMiembro" tabindex="-1" aria-labelledby="modalEditarMiembroLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content modal-rst-bg-dark">
                        <div class="modal-header border-0 px-4 pt-4">
                            <div>
                                <h5 class="modal-title text-success fs-6">Editar Miembro</h5>
                            </div>
                            <button type="button" class="btn-close btn-close-white opacity-75" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                        </div>
                        <div class="modal-body px-4">
                            <h4 class="text-white mb-4">Modificar Miembro</h4>
                            <form action="/miembros/actualizar" method="POST">
                                <input type="hidden" id="user_id_editar" name="user_id">
                                <input type="hidden" id="user_cedula_editar" name="user_cedula">

                                <div class="mb-4">
                                    <label for="user_nombre_editar" class="form-label modal-rst-label">
                                        <i class="fa fa-user icono-modal-rst me-2"></i>Nombres
                                    </label>
                                    <input type="text" class="form-control modal-rst-input" id="user_nombre_editar"
                                        name="user_nombre" maxlength="50" required>
                                </div>

                                <div class="mb-4">
                                    <label for="user_apellido_editar" class="form-label modal-rst-label">
                                        <i class="fa fa-user icono-modal-rst me-2"></i>Apellidos
                                    </label>
                                    <input type="text" class="form-control modal-rst-input" id="user_apellido_editar"
                                        name="user_apellido" maxlength="50" required>
                                </div>

                                <div class="mb-4">
                                    <label for="user_telefono_editar" class="form-label modal-rst-label">
                                        <i class="fa fa-phone icono-modal-rst me-2"></i>Teléfono
                                    </label>
                                    <input type="text" class="form-control modal-rst-input" id="user_telefono_editar"
                                        name="user_telefono" maxlength="10" required>
                                </div>

                                <div class="mb-4">
                                    <label for="user_email_editar" class="form-label modal-rst-label">
                                        <i class="fa fa-envelope icono-modal-rst me-2"></i>Correo
                                    </label>
                                    <input type="email" class="form-control modal-rst-input" id="user_email_editar"
                                        name="user_email" maxlength="35" required>
                                </div>

                                <div class="mb-4">
                                    <label for="tipus_id_editar" class="form-label modal-rst-label">
                                        <i class="fa fa-users icono-modal-rst me-2"></i>Tipo de Usuario
                                    </label>
                                    <select id="tipus_id_editar" name="tipus_id" class="form-select modal-rst-input"
                                        required>
                                        <% tiposMiembro.forEach(tipo=> { %>
                                            <%if(tipo.PermisoUsuario.perus_detalle==="GM_TE_USER"){%>
                                            <option value="<%= tipo.tipus_id %>">
                                                <%= tipo.tipus_detalles %>
                                            </option>
                                            <% } %>
                                            <% }); %>
                                    </select>
                                </div>

                                <div class="modal-footer border-0 px-4 pb-4">
                                    <button type="button" class="btn modal-rst-btn-cancel"
                                        data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn modal-rst-btn-success px-4">Guardar
                                        Cambios</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            const modalEditar = document.getElementById('modalEditarMiembro');
            modalEditar.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const id = button.getAttribute('data-id');
                const cedula = button.getAttribute('data-cedula');
                const nombre = button.getAttribute('data-nombre');
                const apellido = button.getAttribute('data-apellido');
                const telefono = button.getAttribute('data-telefono');
                const email = button.getAttribute('data-email');
                const tipus_id = button.getAttribute('data-tipus');

                modalEditar.querySelector('#user_id_editar').value = id;
                modalEditar.querySelector('#user_cedula_editar').value = cedula;
                modalEditar.querySelector('#user_nombre_editar').value = nombre;
                modalEditar.querySelector('#user_apellido_editar').value = apellido;
                modalEditar.querySelector('#user_telefono_editar').value = telefono;
                modalEditar.querySelector('#user_email_editar').value = email;
                modalEditar.querySelector('#tipus_id_editar').value = tipus_id;

            });
        </script>

</body>

</html>