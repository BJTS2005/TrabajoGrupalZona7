<%- include ../layout/cabecera.ejs %>
    <br>
    <h1>Crear Indicador</h1>

    <form method="post" action="/indicadores/guardar">


        <div class="form-group">
            <label for="nombre">Nombre del Indicador:</label>
            <input id="nombre" class="form-control" type="text" name="nombre" required>
        </div>

        <div class="form-group">
            <label for="descripcion">Descripción:</label>
            <input id="descripcion" class="form-control" type="text" name="descripcion">
        </div>

        <div class="form-group">
            <label for="magnitudIndicador">Magnitud:</label>
            <select id="magnitudIndicador" class="form-select" type="text" name="magnitudIndicador">
                <option value="hola">hola</option>
                <option value="hola">hola</option>
            </select>
        </div>
        <br>

        <div id="opciones-container">

        </div>
        <div>
            <button type="button" id="opcion-btn" class="btn btn-secondary">Agregar Opción</button>
        </div>
        <br>
        <div id="subComponente-container">

        </div>
        <div>
            <button type="button" id="sub-btn" class="btn btn-secondary">Agregar Subcomponente</button>
        </div>
        <br>

        <button type="submit" class="btn btn-primary">Crear Indicador</button>

    </form>

    <%- include ../layout/pie.ejs %>

